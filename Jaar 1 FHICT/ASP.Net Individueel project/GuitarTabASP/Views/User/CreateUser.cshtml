@model GuitarTabASP.Models.UserViewModel

@{
    ViewData["Title"] = "CreateUser";
}

<h1>Account aanmaken.</h1>

<h4>Vul uw gegevens in.</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateUser" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gebruikersnaam" class="control-label"></label>
                <input asp-for="Gebruikersnaam" class="form-control" />
                <span asp-validation-for="Gebruikersnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="wachtwoord" class="control-label"></label>
                <input asp-for="wachtwoord" class="form-control" />
                <span asp-validation-for="wachtwoord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Maak account aan." class="btn btn-primary" />
            </div>
            @if (ViewBag.response == "Email bestaat al.")
            {
                <label>Response:</label><p class="text-danger"> @ViewBag.response</p>

            }
            else if (ViewBag.response == "Gebruikersnaam bestaat al.")
            {
                <label>Response:</label><p class="text-danger"> @ViewBag.response</p>

            }
            else
            {
                <label>Response:</label> @ViewBag.response

            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

